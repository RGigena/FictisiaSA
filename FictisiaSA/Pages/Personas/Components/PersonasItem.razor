<tr>
    <td>@PersonaVM.Nombre</td>
    <td>@PersonaVM.Edad</td>
    <td>@PersonaVM.Genero</td>
    <td>@PersonaVM.Dni</td>
    <td>@(PersonaVM.Activo.Activo ? "Activo" : "Inactivo")</td>
    <td>
        <a @onclick="() => VerMas(PersonaVM.PersonaId)" @onclick:preventDefault class="text-reset fs-16 px-1">
            <i class="fas fa-expand-alt"></i>
        </a>
    </td>
    <td>
        <a @onclick="() => EditarCliente(PersonaVM.PersonaId)" @onclick:preventDefault class="text-reset fs-16 px-1">
            <i class="fas fa-edit"></i>
        </a>
    </td>
    <td>
        <a @onclick="() => EliminarCliente(PersonaVM.PersonaId)" @onclick:preventDefault class="text-reset fs-16 px-1">
            <i class="fas fa-trash-alt"></i>
        </a>
    </td>
</tr>

<!-- Modal de Confirmación -->
@if (showConfirmationModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ver Mas</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Maneja: </strong>@(PersonaVM.Adicionales.Maneja ? "Si" : "No")</p>
                    <p><strong>Usa lentes: </strong>@(PersonaVM.Adicionales.UsaLentes ? "Si" : "No")</p>
                    <p><strong>Diabético: </strong> @(PersonaVM.Adicionales.EsDiabetico ? "Si" : "No")</p>
                    <p><strong>Padece alguna otra enfermedad: </strong>@(PersonaVM.Adicionales.OtraEnfermedad ? "Si" : "No")</p>
                    <p><strong>Comentarios: </strong> @PersonaVM.Adicionales.Comentarios</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<!-- Modal de Confirmación -->
@if (showConfirmationDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="CloseModalEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas el cliente?</p>
                    <p><strong>Nombre:</strong> @PersonaVM.Nombre</p>
                    <p><strong>DNI:</strong> @PersonaVM.Dni</p>
                    <p><strong>Estado</strong> @(PersonaVM.Activo.Activo ? "Activo" : "Inactivo")</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModalEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminarCliente">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}